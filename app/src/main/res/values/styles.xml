<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--自定义ProgressBar样式-->
    <style name="myProgressBarLoginStyle">
        <item name="android:indeterminateDrawable">@drawable/login_loading</item>
        <item name="android:minWidth">90dip</item>
        <item name="android:maxWidth">90dip</item>
        <item name="android:minHeight">90dip</item>
        <item name="android:maxHeight">90dip</item>
    </style>

</resources>
